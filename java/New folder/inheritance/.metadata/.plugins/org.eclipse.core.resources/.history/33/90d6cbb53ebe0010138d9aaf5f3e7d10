package ss;

class Student {
	int fid;
	String name;
	int distance;
	static int count = 0;

	static int getCount() {
		return count;
	}

	public static int setCount() {
		return count;
	}

	public int getFid() {
		return fid;
	}

	public void setFid(int fid) {
		this.fid = fid;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getDistance() {
		return distance;
	}

	public void setDistance(int distance) {
		this.distance = distance;
	}

	Student() { // ðŸ”¹ Default constructor starts
		System.out.println("student default constructor ");
		count++;
	} // ðŸ”¹ Default constructor ends

	Student(int i, String n, int d) { // ðŸ”¹ Parameterized constructor starts
		System.out.println("student para constructor ");
		this.fid = i;
		this.name = n;
		this.distance = d;
		count++;
	} // ðŸ”¹ Parameterized constructor ends

	void display() {
		System.out.println(" fid is " + this.fid);
		System.out.println("name is " + this.name);
		System.out.println("Distance is " + this.distance);
	}
} // ðŸ”¹ Student class ends


class PlacedStudent extends Student {// is--a Step 1

	//step2 remove and reuse state and behaviour 
	String cName;
	String designation;

	
	public String getcName() {
		return cName;
	}

	public void setcName(String cName) {
		this.cName = cName;
	}

	public String getDesignation() {
		return designation;
	}

	public void setDesignation(String designation) {
		this.designation = designation;
	}

	PlacedStudent() { // ðŸ”¹ Default constructor starts
		super(); // step 4a
		System.out.println("placed Student Default constructor -- ");
	} // ðŸ”¹ Default constructor ends

	PlacedStudent(int i, String n, int d, String cn, String dd) { // ðŸ”¹ Parameterized constructor starts
		super(i,n,d); //step 4b
		
		this.cName = cn;
		this.designation = dd;
	} // ðŸ”¹ Parameterized constructor ends

	void display() {
		super.display();// step 3
		System.out.println("Company name is " + this.cName);
		System.out.println("Designation is " + this.designation);
	}
} // ðŸ”¹ PlacedStudent class ends


